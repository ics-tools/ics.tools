{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://ics.tools/json/schema/school-holiday-schema.json",
    "title": "ics.tools School holiday schema",
    "type": "object",
    "required": [
        "metadata",
        "school_holidays"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri-reference"
        },
        "metadata": {
            "type": "object",
            "required": [
                "state",
                "code"
            ],
            "additionalProperties": false,
            "properties": {
                "state": {
                    "type": "string",
                    "description": "Vollständiger Name des Bundeslandes (z.B. Bayern)"
                },
                "code": {
                    "type": "string",
                    "enum": [
                        "BW",
                        "BY",
                        "BE",
                        "BB",
                        "HB",
                        "HH",
                        "HE",
                        "MV",
                        "NI",
                        "NW",
                        "RP",
                        "SL",
                        "SN",
                        "ST",
                        "SH",
                        "TH"
                    ],
                    "description": "Zweistelliges ISO-Kürzel"
                }
            }
        },
        "school_holidays": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "start",
                    "end"
                ],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name der Ferien"
                    },
                    "start": {
                        "type": "string",
                        "format": "date"
                    },
                    "end": {
                        "type": "string",
                        "format": "date"
                    },
                    "created": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}